<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dist="http://schemas.android.com/apk/distribution">

    <uses-permission android:name="android.permission.NFC" />

    <dist:module dist:instant="true" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataShare"
        tools:targetApi="31">
        <activity
            android:name="com.elkhami.instantdatashare.view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DataShare">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="aelkhami.github.io" />
            </intent-filter>
            <meta-data
                android:name="default-url"
                android:value="http://aelkhami.github.io" />
        </activity>

        <provider
            android:authorities="com.elkhami.instantdatashare.content_provider"
            android:name=".content_provider.UserProvider"
            android:exported="true"
            android:enabled="true"/>
    </application>

</manifest>